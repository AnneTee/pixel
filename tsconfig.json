{
	"include": [
		"scripts",
		"app"
	],
	"exclude": [
		"app/backstop_data/engine_scripts",
		"app/backstop_data/html_report"
	],
	"compilerOptions": {
		"lib": [
			"es2021"
		],
		"module": "commonjs",
		"target": "es2021",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"pretty": true
	}
}
